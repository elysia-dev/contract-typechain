{
  "include": ["src/**/*"],
  "compilerOptions": {
      /* Basic Options */
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
  },
  "exclude": ["__test__", "./**/*.spec.ts", "dist"]
}